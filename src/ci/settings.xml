<settings>
    <servers>
        <server>
            <id>central</id>
            <username>${env.CENTRAL_USERNAME}</username>
            <password>${env.CENTRAL_SECRET}</password>
        </server>
        <server>
            <id>central-sonatype-upload</id>
            <username>${env.CENTRAL_USERNAME}</username>
            <password>${env.CENTRAL_SECRET}</password>
        </server>
        <server>
            <id>sonatype-oss-index</id>
            <username>${env.OSS_EMAIL}</username>
            <password>${env.OSS_TOKEN}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>securecentral</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <!--Override the repository (and pluginRepository) "central" from the
               Maven Super POM -->
            <repositories>
                <repository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>
</settings>