<FindBugsFilter>

    <Match>
        <Class name="com.okta.spring.oauth.code.mvc.LoginController" />
        <Bug pattern="SPRING_ENDPOINT" />
    </Match>

    <Match>
        <Pakage name="com.okta.spring.oauth.implicit" />
        <Bug pattern="SIC_INNER_SHOULD_BE_STATIC_ANON" />
    </Match>
    <!-- allow for examples -->
    <Match>
        <Pakage name="com.okta.spring.example.controllers" />
        <Bug pattern="URF_UNREAD_PUBLIC_OR_PROTECTED_FIELD" />
    </Match>
    <Match>
        <Package name="com.okta.spring.example" />
        <Bug pattern="SIC_INNER_SHOULD_BE_STATIC_ANON" />
    </Match>
    <Match>
        <Package name="com.okta.spring.example.controllers" />
        <Bug pattern="SPRING_ENDPOINT" />
    </Match>
    <!-- Allow for any endpoints for tests -->
    <Match>
        <Package name="~com\.okta\.spring\.tests\.oauth2.*"/>
        <Bug pattern="SPRING_ENDPOINT" />
    </Match>
    <!-- Findbugs does NOT like how we are compiling groovy -->
    <Match>
        <Package name="~com\.okta\.test\.mock.*" />
    </Match>


</FindBugsFilter>